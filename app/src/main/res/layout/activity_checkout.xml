<!--                        android:textSize="16sp" />-->



                    <RadioGroup
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <RadioButton
                            android:drawablePadding="12dp"
                            android:drawableEnd="@drawable/homepng"
                            android:drawableTint="@color/underline"
                            android:text="Home Address "
                            android:id="@+id/radiobt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:focusable="false"
                            android:clickable="true"></RadioButton>



                        <androidx.cardview.widget.CardView


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">



                                <LinearLayout
                                    android:layout_marginLeft="32dp"
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/txtUserName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/source_sans_pro"
                                        android:textColor="@android:color/black"
                                        android:textSize="16sp"
                                        android:layout_alignTop="@+id/radioButton"

                                        android:layout_toEndOf="@+id/radioButton"
                                        android:text="Badri"
                                        tools:ignore="NotSibling"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtAddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/source_sans_pro"
                                        android:layoutDirection="rtl"
                                        android:layout_alignStart="@+id/txtUserName"
                                        android:layout_below="@+id/txtUserName"

                                        android:textColor="@color/black"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        android:text="8/3/35 4th street,Khanpur, near NAD , vizag, AndhraPradesh"
                                        android:textSize="16sp" />

                                </LinearLayout>


                            </LinearLayout>



                        </androidx.cardview.widget.CardView>





                        <RadioButton
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/underline"
                            android:drawableEnd="@drawable/schoolpng"
                            android:text="Deliver To School"
                            android:id="@+id/radiobt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:focusable="false"
                            android:clickable="true"/>

                        <RadioButton
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/underline"
                            android:drawableEnd="@drawable/shopbbg"
                            android:text="Deliver To Shop"
                            android:id="@+id/radiobt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:focusable="false"
                            android:clickable="true"/>



                    </RadioGroup>




                </RelativeLayout>





            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Coupons"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relativeCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/couponImage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_discount"/>

                <EditText
                    android:id="@+id/etCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toStartOf="@+id/txtApply"
                    android:layout_toEndOf="@+id/couponImage"
                    android:hint=" APPLY   COUPON"
                    android:fontFamily="@font/source_sans_pro"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/txtApply"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:text="Apply"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gradientsplashbg"

                    android:textColor="@color/white" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Price Details"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/roundedlayoutbg"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/txtCartTotal"
                    android:text="Cart Total"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtCartTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="₹300"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCart"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/txtCouponPrice"
                    android:text="Coupon Discount"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtCouponPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCartTotal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:text="Apply Coupon"
                    android:textColor="@color/colorGreen"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCoupon"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/txtDeliveryPrice"
                    android:text="Delivery"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtDeliveryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCouponPrice"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:text="₹80"
                    android:textColor="@color/kocharcolor"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txtDelivery"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorGray" />


                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@+id/txtDeliveryPrice"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:text="₹380"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Expected Delivery"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtExpectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="2021-09-31"
                android:background="@drawable/roundedlayoutbg"
                android:textColor="@color/kocharcolor"
                android:textSize="14sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txtPaymentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Payment Mode"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:background="@drawable/roundedlayoutbg">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbCod"
                    android:text="Pay Advance ( 50 % )"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtError"
                    android:layout_gravity="center"
                    android:textSize="11sp"
                    android:text="@string/cod_is_not_eligible_for_discounted_orders"
                    android:textColor="@color/kocharcolor"
                    tools:ignore="SmallSp"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txtDelivery"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorGray" />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbOnline"
                    android:text="Pay Full ( 100 % )"
                    android:layout_marginBottom="10dp"/>


            </RadioGroup>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/gradientsplashbg"
                android:text="continue"
                android:clickable="true"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>


<ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="gone" />

</RelativeLayout>