<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/amazoncolor"
    app:cardCornerRadius="12dp"

    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:backgroundTint="@color/kocharcolor"


            app:cardCornerRadius="32dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2">

            <TextView


                android:id="@+id/discountid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:text=" 5%\nOff"
                android:textColor="@color/white"
                android:textSize="12sp"></TextView>
        </androidx.cardview.widget.CardView>
    <LinearLayout



        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"


        android:orientation="vertical"
        android:weightSum="5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/tabsuboneimage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/manpng"></ImageView>

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tabsubonetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/source_sans_pro"
            android:maxLines="2"
            android:text="Active Uniform For men Solid shirt For Men"

            android:textColor="@color/black"
            android:textSize="14sp"></TextView>

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tabsubonecolorsavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/source_sans_pro"
            android:maxLines="2"
            android:text="7 Colors Available"

            android:textColor="@color/black"
            android:textSize="16sp"></TextView>

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tabsubonemodelnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"

            android:text="NA-8102"
            android:textSize="10sp"></TextView>

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tabsuboneprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="$7.99"
            android:textColor="@color/black"

            android:textSize="14sp"
            android:textStyle="bold"></TextView>


    </LinearLayout>

    <CheckBox
        app:useMaterialThemeColors="false"
        android:button="@drawable/heart_item_wishlist"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"></CheckBox>

        // android:id="@+id/bttabsuboneaddtocart"
        <androidx.appcompat.widget.AppCompatButton



            android:layout_marginTop="8dp"
            android:textColor="@color/amazoncolor"
            android:textSize="16sp"

            android:background="@drawable/addtocartbg"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"></androidx.appcompat.widget.AppCompatButton>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>