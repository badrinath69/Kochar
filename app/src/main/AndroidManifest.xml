<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pivotalsoft.kochar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kochar_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kochar_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kochar"
        android:usesCleartextTraffic="true">
        <activity android:name=".emptycart"></activity>
        <activity
            android:name=".activities.FilterProduct"
            android:parentActivityName=".activities.OrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CheckoutActivity"
            android:parentActivityName=".activities.TabSubTwoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Noactionbar" />
        <activity
            android:name=".activities.AddressDetails"
            android:parentActivityName=".activities.AddAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Noactionbar" />
        <activity
            android:name=".activities.AddAddressActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".activities.CheckoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Noactionbar" />
        <activity
            android:name=".activities.CartActivity"
            android:parentActivityName=".activities.TabSubTwoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Noactionbar" />
        <activity
            android:name=".activities.TabSubTwoActivity"
            android:parentActivityName=".activities.TabSubOneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Noactionbar" />
        <activity
            android:name=".activities.TabSubOneActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".activities.FilterProduct"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Noactionbar" />
        <activity
            android:name=".activities.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AccountDetails"
            android:parentActivityName=".activities.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Noactionbar" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TabsActivity"
            android:parentActivityName=".activities.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Noactionbar" />
        <activity
            android:name=".activities.SplashScreen"
            android:label="Kochar Uniforms">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>